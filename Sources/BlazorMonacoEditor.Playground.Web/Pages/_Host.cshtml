@page "/index"
@using BlazorMonacoEditor.Playground
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <title>Blazor Monaco playground (web)</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <base href="~/" />
    <link rel="icon" type="image/png" href="_content/BlazorMonacoEditor.Playground/favicon.png"/>
    <link href="_content/BlazorMonacoEditor.Playground/css/app.css" rel="stylesheet"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<body>

<app>
    @(await Html.RenderComponentAsync<App>(RenderMode.Server))
</app>


<script src="_content/BlazorMonacoEditor/js/monaco.bundle.js"></script>
<script src="_framework/blazor.server.js"></script>
</body>
</html>